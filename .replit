modules = ["python-3.11"]
[agent]
expertMode = true
integrations = ["python_gemini:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["bash", "cacert", "cargo", "glibcLocales", "libiconv", "libxcrypt", "libyaml", "rustc"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "IRIS Chatbot Production"

[[workflows.workflow]]
name = "IRIS Chatbot Production"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn -c gunicorn.conf.py run:app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["python", "run.py"]
